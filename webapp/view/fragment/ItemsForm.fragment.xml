<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Table id="itemstable" items="{GoodsReceiptDelete>/GoodsReceiptItems}" width="100%" noDataText="No data" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true">
		<infoToolbar>
			<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
				<content>
					<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
				</content>
			</Toolbar>
		</infoToolbar>
		<columns>
			<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>GRowLabel}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>descriptionLabel}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>quantityLabel}" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>grOKLabel}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
				</header>
				<footer/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Active" vAlign="Middle">
				<cells>
					<Text text="{= parseFloat(${GoodsReceiptDelete>MaterialDocumentItem})}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
					<Text text="{GoodsReceiptDelete>Description}" width="auto" maxLines="3" textAlign="Begin" textDirection="Inherit"/>
				 	<Text text="{GoodsReceiptDelete>Quantity} {GoodsReceiptDelete&gt;UnitMeasure}" width="auto" textAlign="Begin" textDirection="Inherit"/>
					<CheckBox id="__box1" name="{GoodsReceiptDelete>OK}" selected="{GoodsReceiptDelete>OK}" textAlign="Begin" textDirection="Inherit" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>