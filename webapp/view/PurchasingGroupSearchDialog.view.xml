<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" controllerName="ch.neo.fiori.mm.grchange.controller.PurchasingGroupSearchDialog">
	<m:Dialog horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="{i18n>PurchasingGroupTitle}" type="Standard" verticalScrolling="true">
		<m:content>
			<m:List id="ch.neo.fiori.mm.grchange.purchasingGroupSearchResultList" 
			        mode="SingleSelectMaster" 
			        width="100%" 
			        headerText="Header" 
			        footerText="" 
			        backgroundDesign="Solid" 
			        showSeparators="All" 
			        growing="true" 
			        growingThreshold="5" 
			        growingScrollToLoad="false"
		        	items="{PurchaseOrderModel>/PurchasingGroups}">
				<m:items>
					<m:ObjectListItem title="{= parseFloat(${PurchaseOrderModel>Id})} - {PurchaseOrderModel>Description}">
					</m:ObjectListItem>
				</m:items>
				<m:headerToolbar>
					<m:Toolbar visible="true" enabled="true" width="" design="Solid">
						<m:content>
							<m:SearchField placeholder="{i18n>PurchasingGroupSearch}" showSearchButton="true" visible="true" width="100%" liveChange="_onSearchFieldLiveChange"/>
						</m:content>
					</m:Toolbar>
				</m:headerToolbar>
			</m:List>
		</m:content>
		<m:beginButton/>
		<m:buttons>
			<m:Button text="{i18n>PurchasingGroupOK}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onOkButtonPress"/>
			<m:Button text="{i18n>PurchasingGroupKO}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onCancelButtonPress"/>
		</m:buttons>
		<m:customHeader/>
		<m:endButton/>
		<m:subHeader/>
	</m:Dialog>
</mvc:View>