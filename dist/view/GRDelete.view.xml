<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" 
controllerName="ch.neo.fiori.mm.grchange.controller.GRChange">
	<Page showHeader="false">
		<uxap:ObjectPageLayout id="ObjectPageLayout" useIconTabBar="false" alwaysShowContentHeader="true">
			<!--showFooter="true">-->
			<uxap:headerTitle>
				<uxap:ObjectPageHeader objectTitle="{GoodsReceiptDelete>/VendorName}">
					<uxap:navigationBar>
						<Bar design="Auto">
							<contentLeft>
								<Button text="" type="Default" icon="sap-icon://navigation-left-arrow" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onNavigationBackButtonPress"/>
							</contentLeft>
							<contentMiddle/>
							<contentRight/>
						</Bar>
					</uxap:navigationBar>
					<uxap:actions/>
				</uxap:ObjectPageHeader>
			</uxap:headerTitle>
			<uxap:headerContent>
				<layout:VerticalLayout>
					<ObjectStatus title="{i18n>labelGRNumber}" text="{GoodsReceiptDelete>/Id} {GoodsReceiptDelete&gt;/Description}"/>
					<ObjectStatus title="{i18n>labelEseguita}" text="{GoodsReceiptDelete>/Creator}"/>
				</layout:VerticalLayout>
			</uxap:headerContent>
			<uxap:sections>
				<uxap:ObjectPageSection title="{i18n>generalDataTitle}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<core:Fragment fragmentName="ch.neo.fiori.mm.grchange.view.fragment.GeneralDataForm" type="XML"/>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
				<uxap:ObjectPageSection title="{i18n>itemsTitle}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<core:Fragment fragmentName="ch.neo.fiori.mm.grchange.view.fragment.ItemsForm" type="XML"/>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
				<uxap:ObjectPageSection title="{i18n>attachmentsTitle}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<core:Fragment fragmentName="ch.neo.fiori.mm.grchange.view.fragment.AttachmentsForm" type="XML"/>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
			</uxap:sections>
			<!--<uxap:footer>-->
			<!--	<Bar design="Auto">-->
			<!--		<contentLeft/>-->
			<!--		<contentMiddle/>-->
			<!--		<contentRight>-->
			<!--			<Button text="Cancellare" type="Emphasized" id="GRDeleteButton" width="auto" enabled="true" visible="true" iconDensityAware="false"-->
			<!--				press="onDeleteGoodsReceiptButtonPress"/>-->
			<!--		</contentRight>-->
			<!--	</Bar>-->
			<!--</uxap:footer>-->
		</uxap:ObjectPageLayout>
		<footer>
			<Bar>
				<contentLeft/>
				<contentMiddle>
				    <Button xmlns="sap.m" text="Salvare allegati" id="GRSaveButton" type="Emphasized" width="auto" icon="sap-icon://save" press="onSaveGoodsReceiptButtonPress"/>
				</contentMiddle>
 
				<contentRight>
					<Button text="Cancellare" type="Emphasized" id="GRDeleteButton" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onDeleteGoodsReceiptButtonPress" icon="sap-icon://delete"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>